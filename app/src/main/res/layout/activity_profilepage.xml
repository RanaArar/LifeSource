<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".profilepage">


<LinearLayout
    android:id="@+id/donor_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="5dp"
    android:layout_alignParentTop="true"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donor Name"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"

        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="102dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="92dp"
        android:layout_height="86dp"
        android:src="@drawable/cou"
        tools:layout_editor_absoluteX="262dp"
        tools:layout_editor_absoluteY="98dp" />

    <Button
        android:id="@+id/button9"
        android:layout_width="79dp"
        android:layout_height="79dp"
        android:background="@drawable/setting"
        tools:layout_editor_absoluteX="335dp"
        tools:layout_editor_absoluteY="98dp" />
    <Button
        android:id="@+id/button8"
        android:layout_width="68dp"
        android:layout_height="86dp"
        android:background="@drawable/notificon"
        tools:layout_editor_absoluteX="194dp"
        tools:layout_editor_absoluteY="93dp" />
</LinearLayout>
<LinearLayout
    android:id="@+id/select_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    android:layout_below="@id/donor_info"
    android:orientation="vertical"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="5dp">
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a hospital"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
 />
    <Button
        android:id="@+id/button12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/grohos3"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="376dp" />
    <Button
        android:id="@+id/button10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/grohos1"
        tools:layout_editor_absoluteY="250dp" />

    <Button
        android:id="@+id/button11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/grohos2"
        tools:layout_editor_absoluteY="314dp" />

</LinearLayout>

    <TextView
        android:id="@+id/donate_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:text="Donate now"
        android:layout_below="@id/select_layout"
        android:textColor="#AE1C21"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/donate_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/donate_now"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="551dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="101dp"
            android:layout_height="99dp"
            android:src="@drawable/appoicon" />

        <Button
            android:id="@+id/button13"
            android:layout_width="259dp"
            android:layout_height="78dp"
            android:layout_margin="2dp"
            android:background="@drawable/get" />
    </LinearLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView

        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:background="#E6D2CE"
        android:fitsSystemWindows="true"
        app:itemIconTint="@drawable/bottom_nav_colors"
        app:itemTextColor="@drawable/bottom_nav_colors"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu" />


</RelativeLayout>